---
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
  linkUrl: string;
}

const { title, description, imageUrl, imageAlt, linkUrl } = Astro.props;
---

<div class="bg-gray-200 rounded-lg p-6 text-center h-96 flex flex-col hover:scale-105 transition-transform duration-300">
  <div class="h-48 rounded-lg mb-4 overflow-hidden">
    <img src={imageUrl} alt={imageAlt} class="w-full h-full object-cover" />
  </div>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600 mb-4 flex-grow">{description}</p>
  <a href={linkUrl} class="bg-black text-white px-6 py-2 rounded-lg hover:opacity-90 transition-opacity">
    Learn more
  </a>
</div>
