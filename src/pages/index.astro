---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { services } from '../data/services.ts';
---

<BaseLayout title="Hennessy Chauffeurs - Premium Chauffeur Service in Leinster">
  <Hero 
    title="Premium Chauffeur Service"
    subtitle="Leinster"
    imageUrl="/stockPhoto.jpg"
    imageAlt="Hennessy Chauffeurs"
  />

  <!-- Service Blurb -->
  <section class="max-w-4xl mx-auto px-4 py-16 text-center">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
      Premium Chauffeur Service in Leinster
    </h1>
    <p class="text-lg md:text-xl text-gray-600 mb-8 leading-relaxed">
      Experience luxury travel with Hennessy Chauffeurs. We provide professional, 
      reliable, and discreet transportation services for business executives, special 
      occasions, and airport transfers. Our experienced drivers and premium fleet 
      ensure you arrive in comfort and style, every time.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/contact" class="inline-block bg-black text-white px-8 py-3 rounded-xl hover:opacity-90 transition-opacity">
        Book Your Journey
      </a>
      <a href="tel:+353851315392" class="inline-block border border-gray-300 text-gray-700 px-8 py-3 rounded-xl hover:bg-gray-50 transition-colors">
        Call Now
      </a>
    </div>
  </section>

  <!-- Services Section -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-2xl md:text-3xl font-bold text-center mb-8">Our Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {services.map((service) => (
        <ServiceCard 
          title={service.title}
          description={service.description}
          imageUrl={service.imageUrl}
          imageAlt={service.imageAlt}
          linkUrl={service.linkUrl}
        />
      ))}
    </div>
  </section>
</BaseLayout>
