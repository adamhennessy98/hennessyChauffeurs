---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - Hennessy Chauffeurs" description="Get in touch with Hennessy Chauffeurs for premium chauffeur services in Leinster. Contact us for bookings and inquiries.">
  <!-- Contact Page Content -->
  <section class="relative min-h-screen">
    <!-- Background Image with Blur -->
    <div class="absolute inset-0 z-0">
      <img src="/contactMe.jpg" alt="Contact Background" class="w-full h-full object-cover filter blur-[2px] brightness-50" />
      <div class="absolute inset-0 bg-black/30"></div>
    </div>
    
    <!-- Content Overlay -->
    <div class="relative z-10 max-w-4xl mx-auto px-4 py-16">
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-6 drop-shadow-2xl">
          Contact Us
        </h1>
        <p class="text-lg md:text-xl text-white/90 drop-shadow-lg">
          Get in touch or request a quote for premium chauffeur services in Leinster
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="bg-white/95 backdrop-blur-sm rounded-xl p-8 shadow-2xl">
          <h2 class="text-2xl font-semibold mb-6 text-gray-900">Get In Touch</h2>
          <div class="space-y-4">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <img src="/phone.svg" alt="Phone Icon" class="w-6 h-6 filter invert" />
              </div>
              <div>
                <p class="font-semibold">Phone</p>
                <a href="tel:+353851315392" class="text-gray-600 hover:text-black">+353 85 131 5392</a>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <img src="/email.svg" alt="Email Icon" class="w-6 h-6 filter invert" />
              </div>
              <div>
                <p class="font-semibold">Email</p>
                <a href="mailto:info@hennessychauffeurs.ie" class="text-gray-600 hover:text-black">info@hennessychauffeurs.ie</a>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <img src="/location.svg" alt="Location Icon" class="w-6 h-6 filter invert" />
              </div>
              <div>
                <p class="font-semibold">Location</p>
                <p class="text-gray-600">Leinster, Ireland</p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <img src="/clock.svg" alt="Clock Icon" class="w-6 h-6 filter invert" />
              </div>
              <div>
                <p class="font-semibold">Availability</p>
                <p class="text-gray-600">24/7 Service Available</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white/95 backdrop-blur-sm rounded-xl p-8 shadow-2xl">
          <h2 class="text-2xl font-semibold mb-6 text-gray-900">Request a quote</h2>
          <form class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
              <input type="text" id="name" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black bg-white/90">
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input type="email" id="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black bg-white/90">
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
              <input type="tel" id="phone" name="phone" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black bg-white/90">
            </div>
            
            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-1">Service Required</label>
              <select id="service" name="service" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black bg-white/90">
                <option value="">Select a service</option>
                <option value="airport">Airport Transfer</option>
                <option value="business">Business Travel</option>
                <option value="occasions">Special Occasions</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black bg-white/90"></textarea>
            </div>
            
            <button type="submit" class="w-full bg-black text-white py-3 px-4 rounded-lg hover:opacity-90 transition-opacity">
              Get Quote
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>