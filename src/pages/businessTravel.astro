---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Business Travel - Hennessy Chauffeurs" description="Executive transportation services for business meetings and corporate travel in Leinster. Professional chauffeur service.">
  <!-- Business Travel Page Content -->
  <section class="max-w-4xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
        Business Travel
      </h1>
      <p class="text-lg md:text-xl text-gray-600">
        Executive transportation for business meetings
      </p>
    </div>

    <!-- Service Details -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      <!-- Content -->
      <div>
        <h2 class="text-2xl font-semibold mb-6">Professional Executive Transportation</h2>
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          Make the right impression with our premium business travel service. Perfect for 
          executives, corporate meetings, and professional events throughout Leinster.
        </p>
        
        <h3 class="text-xl font-semibold mb-4">Business Travel Features:</h3>
        <ul class="space-y-3 mb-6">
          <li class="flex items-start">
            <span class="text-black mr-2">✓</span>
            <span>Corporate accounts available</span>
          </li>
          <li class="flex items-start">
            <span class="text-black mr-2">✓</span>
            <span>Executive luxury vehicles</span>
          </li>
          <li class="flex items-start">
            <span class="text-black mr-2">✓</span>
            <span>Punctual and reliable service</span>
          </li>
          <li class="flex items-start">
            <span class="text-black mr-2">✓</span>
            <span>WiFi available in vehicles</span>
          </li>
          <li class="flex items-start">
            <span class="text-black mr-2">✓</span>
            <span>Complimentary newspaper service</span>
          </li>
        </ul>

        <div class="bg-gray-100 p-6 rounded-lg mb-6">
          <h3 class="text-xl font-semibold mb-2">From €40/hour</h3>
          <p class="text-gray-600">Competitive hourly rates for business transportation</p>
        </div>

        <!-- Contact Button -->
        <div class="mt-8">
          <a href="/contact" class="inline-block rounded-xl px-12 py-3 bg-black text-white hover:opacity-90 hover:scale-105 transition-all duration-300 text-sm font-medium">
            Book Business Travel
          </a>
        </div>
      </div>

      <!-- Image -->
      <div>
        <img src="/serviceImage2.jpg" alt="Business Travel Service" class="w-full h-auto rounded-lg shadow-lg object-cover" />
      </div>
    </div>
  </section>
</BaseLayout>
